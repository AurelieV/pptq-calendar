doctype html
html(lang="fr", xmlns:ng="http://angularjs.org", id="ng-app", ng-app="pptq-calendar")
  head
    meta(charset="utf-8")
    title PPTQ Calendar
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(href="css/app.css", rel="stylesheet")
    meta(name="viewport", content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

  body
    md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id="left")
      md-content
        ul(layout="column" layout-align="start center")
          li
            a(ui-sref="home") Home
          li(flex)
            a(ui-sref="login") Se connecter
    md-toolbar.mainbar
      .md-toolbar-tools
        md-button.md-icon-button(ng-click="$root.openMenu()" aria-label="openMenu")
          md-icon.material-icons(md-font-icon="icon-menu")
        a(ui-sref="{{ $state.current.data.previous }}" ng-if="$state.current.data.previous")
          md-button.md-icon-button(aria-label="openMenu")
            md-icon.material-icons(md-font-icon="icon-previous")
        .title.md-flex PPTQ Calendar
    md-content.body-content.hero-transition.page-transition(ui-view)

    script(src="js/vendor.js")
    script(src="js/moment-fr.js")
    script(src="js/angular-material-components.js")
    script(src="js/app.templates.js")
    script(src="js/app.js")
    script(src="js/lb-services.js")
